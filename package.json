{
  "name": "webcam-cfp",
  "version": "1.0.0",
  "description": "Raspberry Pi webcam capture service for LFAS aerodrome",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "webcam": "node dist/main.js",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests"
  },
  "keywords": [
    "webcam",
    "raspberry-pi",
    "rtsp",
    "aviation",
    "metar"
  ],
  "author": "Nicolas Massart <contact@caenfalaiseplaneurs.fr>",
  "license": "GPL-3.0",
  "dependencies": {
    "node-cron": "^3.0.3",
    "sharp": "^0.33.0",
    "suncalc": "^1.9.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/suncalc": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
